{
  "title": "Ken Burns プリセットのサンプル",
  "description": "ゆっくりとした動きのKen Burnsプリセットを使用したデモ",
  "default_preset": "default",
  "output_dir": "output/10_kenburns_presets",
  "output": [
    {
      "name": "youtube",
      "aspect_ratio": "16:9",
      "object_fit": "cover"
    },
    {
      "name": "tiktok",
      "aspect_ratio": "9:16",
      "object_fit": "contain"
    },
    {
      "name": "instagram",
      "aspect_ratio": "1:1",
      "object_fit": "cover"
    }
  ],
  "subtitle_style": {
    "font_size": "lg",
    "font_color": "white",
    "google_font": "Noto Sans JP",
    "font_weight": "normal",
    "appearance": "shadow",
    "position": "bottom"
  },
  "scenes": [
    {
      "narrations": [{ "text": "Ken Burns プリセットのデモを始めます。" }],
      "visual": {
        "path": "examples/assets/images/sample1.jpg"
      },
      "preset": "kenburns-left-to-right",
      "note": "左から右へゆっくりパン"
    },
    {
      "narrations": [{ "text": "右から左へのパンも可能です。" }],
      "visual": {
        "path": "examples/assets/images/sample2.jpg"
      },
      "preset": "kenburns-right-to-left",
      "note": "右から左へゆっくりパン"
    },
    {
      "narrations": [
        { "text": "上から下への動きは落ち着いた印象を与えます。" }
      ],
      "visual": {
        "path": "examples/assets/images/sample3.jpg"
      },
      "preset": "kenburns-top-to-bottom",
      "note": "上から下へゆっくりパン"
    },
    {
      "narrations": [{ "text": "下から上への動きも自然です。" }],
      "visual": {
        "path": "examples/assets/images/sample1.jpg"
      },
      "preset": "kenburns-bottom-to-top",
      "note": "下から上へゆっくりパン"
    },
    {
      "narrations": [{ "text": "ズームインで被写体に近づきます。" }],
      "visual": {
        "path": "examples/assets/images/sample2.jpg"
      },
      "preset": "kenburns-zoom-in",
      "note": "中央に向かってゆっくりズームイン"
    },
    {
      "narrations": [{ "text": "ズームアウトで全体を見せることもできます。" }],
      "visual": {
        "path": "examples/assets/images/sample3.jpg"
      },
      "preset": "kenburns-zoom-out",
      "note": "中央からゆっくりズームアウト"
    },
    {
      "narrations": [{ "text": "対角線の動きで視線を誘導します。" }],
      "visual": {
        "path": "examples/assets/images/sample1.jpg"
      },
      "preset": "kenburns-diagonal-lt-rb",
      "note": "左上から右下へ対角線パン"
    },
    {
      "narrations": [{ "text": "ご視聴ありがとうございました！" }],
      "visual": {
        "path": "examples/assets/images/sample2.jpg"
      },
      "preset": "kenburns-diagonal-rt-lb",
      "pause_after": 1.0,
      "note": "右上から左下へ対角線パン"
    }
  ],
  "voice": {
    "provider": "google",
    "language_code": "ja-JP",
    "speed": 1.0
  },
  "timing": {
    "default_segment_gap": 0.3,
    "default_scene_gap": 0.5,
    "subtitle_padding": 0.1
  }
}

{
  "version": "1.0",
  "output": {
    "path": "output/08_transitions.mp4",
    "width": 1920,
    "height": 1080,
    "fps": 30,
    "codec": "libx264",
    "audio_codec": "aac",
    "bitrate": "5000k",
    "subtitle_mode": "burn"
  },
  "timeline": {
    "video_layers": [
      {
        "type": "image",
        "path": "examples/assets/images/intro.png",
        "duration": 3.0,
        "transition": {
          "type": "crossfade",
          "duration": 1.0
        }
      },
      {
        "type": "image",
        "path": "examples/assets/images/main.png",
        "duration": 3.0,
        "transition": {
          "type": "crossfade",
          "duration": 0.5
        }
      },
      {
        "type": "image",
        "path": "examples/assets/images/outro.png",
        "duration": 3.0
      }
    ],
    "audio_layers": [],
    "subtitle_layers": [
      {
        "type": "subtitle",
        "appearance": "background",
        "items": [
          {
            "text": "1. Crossfade 1.0秒",
            "start_time": 0.5,
            "end_time": 2.5
          },
          {
            "text": "2. Crossfade 0.5秒",
            "start_time": 3.5,
            "end_time": 5.5
          },
          {
            "text": "3. No Transition",
            "start_time": 6.5,
            "end_time": 8.0
          }
        ],
        "font_size": "lg",
        "font_color": "white",
        "font_weight": "bold",
        "stroke_width": "sm",
        "stroke_color": "black",
        "bg_color": "black@0.7",
        "position": "bottom"
      }
    ]
  }
}
